{% if items is defined and items is not empty %}
    <section class="my-5">
        <div class="row">
            {% for item in items %}
                <div class="col-12 col-md-6 col-lg-4">
                    <a class="card bg-info text-light card-link" href="{{ item.url|esc_url }}">
                        <div class="card-body">
                            <h2 class="mb-0 h3 card-title text-center">
                                {{ item.title|raw }}
                            </h2>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </section>
{% endif %}
