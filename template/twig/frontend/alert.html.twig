<div class="alert alert-{{ type|default('warning')|esc_attr }}{% if centered %} text-center{% endif %}{% if classes is not empty %} {{ classes|esc_attr }}{% endif %}" role="alert">
    {{ render_if_has_content(title_element|default('strong'), {class: 'alert-heading'}, title) }}
    {{ content|raw }}
    {% if dismissible %}
        {% include get_template('./alert_dismiss') %}
    {% endif %}
</div>
